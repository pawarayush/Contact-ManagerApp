<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/rectangle_17">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/loginpage"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


    <TextView
        android:id="@+id/log"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="40dp"

        android:shadowDx="5"
        android:shadowDy="5"
        android:textAlignment="center"
        android:layout_gravity="center"

        android:shadowRadius="5"
        android:text="Login" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to continue"
        android:layout_gravity="center"
        android:textAlignment="center"/>

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="320dp"-->
<!--        android:layout_height="500dp"-->
<!--        android:layout_gravity="center"-->

<!--        app:cardCornerRadius="50dp"-->
<!--        android:layout_margin="60dp"-->
<!--        >-->
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->

<!--            android:orientation="vertical"-->
<!--            android:elevation="@dimen/cardview_compat_inset_shadow">-->


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"


                app:hintTextColor="@color/black"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ltemail"
                    android:layout_width="match_parent"
                    android:background="@drawable/textfl"

                    android:layout_height="wrap_content"
                    android:elevation="@dimen/cardview_compat_inset_shadow"


                    android:hint="Enter Your Email Id" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                app:endIconMode="password_toggle"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:background="@drawable/textfl"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/cardview_compat_inset_shadow"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:id="@+id/ltPass"
                    />
            </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <Button
            android:id="@+id/btnlogin"

            android:layout_width="151dp"
            android:layout_margin="1dp"
            android:backgroundTint="#0386D0"


            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="login" />

        <Button
            android:id="@+id/regester"
            android:layout_width="151dp"
            android:backgroundTint="#F49905"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="SignUp" />
    </LinearLayout>
</LinearLayout>